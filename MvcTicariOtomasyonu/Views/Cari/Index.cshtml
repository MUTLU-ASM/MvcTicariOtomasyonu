@using MvcTicariOtomasyonu.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />  
<h2>Cariler Listesi</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Geçmişi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.sehir</td>
            <td>@x.mail</td>
            <td><a href="/Cari/CariSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.id" class="btn btn-warning">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCari" class="btn btn-info">Yeni Cari Ekle</a>
