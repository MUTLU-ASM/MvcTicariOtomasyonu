@using MvcTicariOtomasyonu.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Listesi</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.urun.ad</td>
            <td>@x.current.ad @x.current.soyad</td>
            <td>@x.personel.ad @x.personel.soyad</td>
            <td>@x.adet</td>
            <td>@x.fiyat</td>
            <td>@x.toplamTutar</td>
            <td>@x.tarih</td>
            <td><a href="/Satis/SatisGetir/@x.id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@x.id" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış</a>

