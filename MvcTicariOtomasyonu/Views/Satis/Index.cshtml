@using MvcTicariOtomasyonu.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.urun.ad</td>
            <td>@x.cariId</td>
            <td>@x.personel.ad @x.personel.soyad</td>
            <td>@x.adet</td>
            <td>@x.fiyat</td>
            <td>@x.toplamTutar</td>
            <td>@x.tarih</td>
            <td><a href="/Personel/PersonelGetir/@x.id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.id" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış</a>
