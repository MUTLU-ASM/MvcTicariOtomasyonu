@using MvcTicariOtomasyonu.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Kalem Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.aciklama</td>
            <td>@x.miktar</td>
            <td>@x.birimFiyat</td>
            <td>@x.tutar</td>
        </tr>
    }
</table>

<a href="/Fatura/YeniKalem" class="btn btn-dark">Yeni Kalem Girişi</a>