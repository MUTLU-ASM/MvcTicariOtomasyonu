@model IEnumerable<MvcTicariOtomasyonu.Models.Siniflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayi</th>
                </tr>
            </thead>
            <tbody>
                @{int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.departman</td>
                        <td>
                            @if (x.sayi >= 1 && x.sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            <td><span class="badge bg-danger">@x.sayi</span></td>
                        }
                            @if (x.sayi >= 4 && x.sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                                <td><span class="badge bg-warning">@x.sayi</span></td>
                            }
                            @if (x.sayi >= 7)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 70%"></div>
                                </div>
                                <td><span class="badge bg-success">@x.sayi</span></td>
                            }
                            </td>
                        </tr>
                    }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>