@model MvcTicariOtomasyonu.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo Girişi</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.takipKodu, "Takip Kodu")
    <input type="text" name="takipKodu" value="@ViewBag.tkpKod" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.personel, "Personel")
    @Html.TextBoxFor(x => x.personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.alici, "Alıcı Kişi")
    @Html.TextBoxFor(x => x.alici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.tarih, "Tarih")
    <input type="date" name="tarih" class="form-control" />
    <br />
    @Html.LabelFor(x => x.aciklama, "Açıklama")
    @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>