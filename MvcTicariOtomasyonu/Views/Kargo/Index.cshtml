@using MvcTicariOtomasyonu.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("k")
        <input type="submit" value="Ara" class="btn btn-success"/>
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detay</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.personel</td>
            <td>@x.alici</td>
            <td>@x.takipKodu</td>
            <td>@x.tarih.ToShortDateString()</td>
            <td><a href="/Kargo/KargoTakip/@x.takipKodu" class="btn btn-warning">Detay</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Kargo/YeniKargo">Yeni Kargo</a>