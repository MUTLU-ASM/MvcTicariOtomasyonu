<div id="small-dialog" class="mfp-hide book-form">
    <div class="login-form login-form-left">
        <div class="agile-row">
            <h3>Cari Giriş Formu</h3>
            <span class="fa fa-lock"></span>
            <div class="clear"></div>
            <div class="login-agileits-top">
                @using (Html.BeginForm("PartialCariGiris", "Login", FormMethod.Post)) { 
                    <input type="text" class="mail" name="mail" Placeholder="Mail Adresi" required="" />
                    <input type="password" class="password" name="sifre" Placeholder="Şifre" required="" />
                    <input type="submit" value="Giriş Yap">
                }
            </div>
            <div class="login-agileits-bottom">
                <h6><a href="#">Şifremi Unuttum</a></h6>
            </div>
        </div>
    </div>
</div>
