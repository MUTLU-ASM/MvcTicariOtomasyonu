@using MvcTicariOtomasyonu.Models.Siniflar
@model List<KargoTakip>

@{
    ViewBag.Title = "CariKargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}


<br />
<h2>Kargo Takip</h2>
<br />

<table class="table table-striped">
    <tr>
        <th>Sıra</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>
    @{ int sirano = 0; }
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sirano++;}@sirano</td>
            <td>@x.aciklama</td>
            <td>@x.tarih</td>
        </tr>
    }
</table>