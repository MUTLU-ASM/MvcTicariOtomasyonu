@using MvcTicariOtomasyonu.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategori</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Kategori/KategoriEkle">Yeni Kategori</a>